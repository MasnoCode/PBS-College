#include <stdio.h>
#define ilosc_zadan [_______________TU WPISAC ILOSC ZADAN_______________]
int main() {

    int zadanie=1,a=1;
    for (int j = 0; zadanie != 0; j++)
    {
        printf("[_______________TU WPISAC ZADANIA_______________]")
               ">>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>Aby zakonczyc program prosze wpisac 0<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<\n");
        if (zadanie > ilosc_zadan || zadanie < 0) printf("Nie ma takiego zadania!\n");
               printf("\nProsze wybrac zadanie:");
        scanf("%d", &zadanie);
        for (int i = 1; i <= a; i++) {
            switch (zadanie) {
                case 1:
                {
                    printf("Wybrano zadanie %d.\n", zadanie);
                    break;
                }
                case 2:
                {
                    printf("Wybrano zadanie %d.\n",zadanie);
                    break;
                }
                case 3:
                {
                    printf("Wybrano zadanie %d.\n",zadanie);
                    break;
                }
                case 4:
                {
                    printf("Wybrano zadanie %d.\n",zadanie);
                    break;
                }
            }
        }
    }
    if (zadanie == 0) printf("Do widzenia :)");
    return 0;
}
