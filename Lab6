#include <stdio.h>
#define ilosc_zadan 4





/* Zadanie 1 */
int zadanie1_x[5];
/* Zadanie 2 */
int komorka_macierzy[2][2];




int main() {

    int zadanie=1,a=1,end=0,enter;
    char ch;
    for (int j = 0; zadanie != 0; j++)
    {
        printf("1.Napisz program, ktory pobierze od uzytkownika 5 liczb i wyswietli je w odwrotnej kolejnosci. Do zadania wykorzystaj tablice.\n"
               "2.Napisz program, ktory dla tablicy dwuwymiarowej o rozmiarze 3x3wypisze z danych podanych przez uzytkownika macierz.\n"
               "3.Napisz  program, ktorydoda  dwie pobrane od uzytkownika liczby,wykorzystujacwskazniki.\n"
               "4.Napisz program, ktory uporzadkujerosnaco ciag 10liczb calkowitych uzywajac notacji wskaznikowej (stala tablica zadeklarowana w programie, sortowanie babelkowe).Sortowanie babelkowe polega na porownywaniu dwoch kolejnych elementow i zamianie ich kolejnosci, jezeli zaburza ona porzadek,w jakim sie sortuje tablice.\n"
               "5.Napisz program, ktorywypelni 10 elementowa tablicecalkowitymiliczbami losowymi z     zakresu     0-100oraz     10elementowa  tablice  liczbamilosowymizmiennoprzecinkowymiz przedzialu 0 -1.Wypisz wszystkie elementy tablicy, napisz funkcje(wykorzystujaca  dzialanie  na  wskaznikach),ktora  zsumuje  wszystkie wylosowane liczby, a nastepnie uzywajac notacji wskaznikowej wskaz5 i 10 elementkazdej ztablicy.Napiszfunkcje, ktora poda najwieksza i najmniejsza wartosc z dwoch pobranychelementow.\n"
               ">>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>Aby zakonczyc program prosze wpisac 0<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<\n");
        if (zadanie > ilosc_zadan || zadanie < 0) printf("Nie ma takiego zadania!\n");
        printf("\nProsze wybrac zadanie:");
        scanf("%d", &zadanie);
        for (int i = 1; i <= a; i++) {
            switch (zadanie) {
                case 1:
                {
                    int b=5,a=4,d;
                    printf("Wybrano zadanie %d.\n", zadanie);
                    for (int k = 1; k <= 6; k++) {
                        printf("Prosze wpisac liczbe %d:", k);
                        scanf("%d", &zadanie1_x[d]);
                        for (k; k >= 5 && k < 10; k++) {
                            printf("\nLiczba %d ma wartosc:%d\n", b, zadanie1_x[a]);
                            a--;
                            b--;
                        }
                        d++;
                    }
                }
                    break;
                case 2:
                {
                    int x=0,y=0,nr_wartosci=1,kolumna;
                    printf("Prosze podac 3 wartosci pierwszej kolumny.\n");
                    for (int cos=0; cos < 3; cos++)
                    {
                        for (int k = 0; k < 3; k++)
                        {
                            printf("Kolumna %d wartosc %d:", kolumna=y+1, nr_wartosci);
                            scanf("%d", &komorka_macierzy[x][y]);
                            printf("X=%d a Y=%d miacerz = %d\n",x,y,komorka_macierzy[x][y]);
                            x++;
                            nr_wartosci++;
                        }
                        printf("\n");
                        x=0;
                        y=y+1;
                        nr_wartosci=1;
                    }
                    x=0;
                    y=0;
                    for (int wysokosc = 0; wysokosc < 3; wysokosc++)
                    {
                        y=0;
                        for (int szerokosc = 0; szerokosc < 3; szerokosc++)
                        {
                            printf("%d\t",komorka_macierzy[x][y]);
                            printf("X=%d a Y=%d miacerz = %d\n",x,y,komorka_macierzy[x][y]);
                            y++;
                        }
                        x++;
                        printf("\n");
                    }

                    break;
                }
                case 3:
                {
                    break;
                }
                case 4:
                {
                    break;
                }
            }
        }
        printf("\n\nPress ENTER key to Continue");
        getchar();
        getchar();
    }
    if (zadanie == 0) printf("\nDo widzenia :)");
    return 0;
}
