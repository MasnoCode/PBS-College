#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#define ilosc_zadan 5




/* Funkcje do zadan */
/* Funkcja do zadania 4 */
/* ********************************************************************************************************* */
void sortowanie(int ilosc, int* wskaznik)
{
    for (int i = 0; i < ilosc; i++)
    {
        for (int j = i + 1; j < ilosc; j++)
        {
            if (*(wskaznik + j) < *(wskaznik + i))
            {
                int t = *(wskaznik + i);
                *(wskaznik + i) = *(wskaznik + j);
                *(wskaznik + j) = t;
            }
        }
    }
    printf("\nCiag posortowany:");
    for (int i = 0; i < ilosc; i++)
        printf("%d ", *(wskaznik + i));
}
/* ********************************************************************************************************* */
/*Funkcje do zadania 5 */
void wartosc_a(int x[]), suma_a(int x[]);
void wartosc_b(float x[]), suma_b(float x[]);
void suma_a(int x[])
{
    int suma=0,*wskaznik_suma;
    wskaznik_suma=&suma;
    for (int i=0; i < 10; i++) *wskaznik_suma = *wskaznik_suma+*(x+i);
    printf("\nSuma wszystkich liczb calkowitych: %d", *wskaznik_suma);
}
void suma_b(float x[])
{
    float suma=0,*wskaznik_suma;
    wskaznik_suma=&suma;
    for (int i = 0; i < 10; i++) *wskaznik_suma=*wskaznik_suma+*(x+i);
    printf("\nSuma wszystkich liczb zmiennoprzecinkowych: %f", *wskaznik_suma);
}
void wartosc_a(int x[])
{
    printf("\nLiczby calkowite\nElement piaty = %d",*(x+(4)));
    printf("\nElement dziesiaty = %d",*(x+9));
    if (*(x+(4)) < *(x+9)) printf("\nWieksza liczba jest wartosc %d",*(x+9));
    else printf("\nWieksza liczba jest wartosc %d\n", *(x+4));
}
void wartosc_b(float x[])
{
    printf("\nLiczby zmiennoprzecinkowe\nElement piaty = %f\n",*(x+(4)));
    printf("Element dziesiaty = %f\n",*(x+9));
    if (*(x+(4)) < *(x+9)) printf("\nWieksza liczba jest wartosc %f",*(x+9));
    else printf("\nWieksza liczba jest wartosc %f", *(x+4));
}
/* ********************************************************************************************************* */

int main() {

    int zadanie=1,a=1,end=0,enter,restart=0;
